tr.team-ana,
.thread-card.team-ana {
  /* line under header */
  --page-header-hr: rgba(244, 122, 56, 0.8);          /* orange */

  /* flat card bg (charcoal) */
  --page-card-bg:       rgba(10, 10, 10, 0.98);       /* charcoal */
  --page-card-bg-hover: rgba(20, 20, 20, 0.98);       /* slightly lighter charcoal */

  /* logo-strip / header band on card – soft orange wash */
  --page-card-header-bg: rgba(244, 122, 56, 0.16);    /* translucent orange */
  background:#000000;
  /* If you want the little date badge to feel white/orange too: */
  /* (optional, only if you’re overriding these elsewhere)
  --accent-secondary:      #ffffff;
  --accent-secondary-soft: rgba(255, 255, 255, 0.18);
  */
}


