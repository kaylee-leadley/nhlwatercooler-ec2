/* assets/css/color-scheme.css */

/* ---------- Design tokens (global + Sharks default) ---------- */

:root {
  --font-sans: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
               Roboto, Arial, sans-serif;

/* Surfaces */
--bg-main:        rgba(160, 167, 178, 0.35); /* deep charcoal page base */
--bg-surface:     #0E1116; /* cards / panels – graphite */
--bg-surface-alt: #141820; /* subtle alt surface */

/* Text */
--text-main:  #F3F4F6;     /* neutral off-white */
--text-muted: #B6BCC6;     /* cool gray, not blue */

/* Borders */
--border-subtle: rgba(160, 167, 178, 0.35); /* neutral gray */
--border-strong: rgba(10, 12, 16, 0.92);    /* near-black */

/* Semantic */
--danger-bg:     rgba(248, 113, 113, 0.16);
--danger-border: rgba(248, 113, 113, 0.75);
--team-gradient: linear-gradient(
  135deg,
  color-mix(in srgb, var(--shark-teal) 26%, var(--shark-deep) 74%) 0%,
  color-mix(in srgb, var(--shark-teal) 18%, var(--shark-deep) 82%) 35%,
  color-mix(in srgb, var(--shark-orange) 22%, var(--shark-deep) 78%) 65%,
  color-mix(in srgb, var(--shark-orange) 34%, var(--shark-deep) 66%) 100%
);
/* Layout-level backgrounds (shared by all teams) */
--page-bg: linear-gradient(
  90deg,
  #070A10 0%,
  #0B1018 22%,
  color-mix(in srgb, #0E141E 88%, rgba(0, 190, 185, 0.18) 12%) 55%,
  color-mix(in srgb, #121A26 82%, rgba(0, 190, 185, 0.22) 18%) 100%
);

  /* “Plate” under content (site-main).
     Middle of the gradient is always tinted by the CURRENT TEAM’S
     --accent-primary-soft, so each team gets its own subtle wash. */
  --site-main-bg: radial-gradient(
                    circle at 0% 0%,
                    rgba(255, 255, 255, 0.05) 0%,
                    transparent 45%
                  ),
                  linear-gradient(
                    180deg,
                    rgba(0, 0, 0, 0.96) 0%,
                    var(--accent-primary-soft) 52%,
                    rgba(0, 0, 0, 0.98) 100%
                  );

  /* Card surfaces (threads, stats panels, posts, etc.) */
  --card-bg:     rgba(15, 23, 42, 0.96);
  --card-border: rgba(15, 23, 42, 0.96);

  /* Subtle chips / tabs / pills */
  --chip-bg:     rgba(15, 23, 42, 0.9);
  --chip-border: rgba(148, 163, 184, 0.5);
  --hdr-teal: rgba(0, 190, 185, 0.18);     /* subtle teal glow */
  --hdr-teal-2: rgba(0, 190, 185, 0.10);   /* softer */
  --hdr-char-1: #151a22;
  --hdr-char-2: #0f131a;

  --header-grad: linear-gradient(
    135deg,
    color-mix(in srgb, var(--hdr-char-1) 88%, var(--hdr-teal) 12%) 0%,
    color-mix(in srgb, var(--hdr-char-2) 92%, var(--hdr-teal-2) 8%) 55%,
    #0b0f15 100%
  );
}
/* NHL rows (standings + stats + rankings) get the same team gradient */
.rankings-table__row[class*="team-"],
.standings-table__row[class*="team-"],
.stats-table__row[class*="team-"],
/* and also cover your current markup that uses just <tr class="team-xxx"> */
.stats-table tr,
.player-card .adv-player-card,
.thread-card__logo-strip {
  --team-gradient: linear-gradient(
    135deg,
    color-mix(in srgb, var(--shark-teal) 26%, var(--shark-deep) 74%) 0%,
    color-mix(in srgb, var(--shark-teal) 18%, var(--shark-deep) 82%) 35%,
    color-mix(in srgb, var(--shark-orange) 22%, var(--shark-deep) 78%) 65%,
    color-mix(in srgb, var(--shark-orange) 34%, var(--shark-deep) 66%) 100%
  );
}

/* ========= Team theme overrides ========= */
/* Each team only overrides color tokens. Layout tokens like
   --page-bg, --site-main-bg, --card-bg stay shared so the app
   feels cohesive, but the tint and accents change by team. */

body.theme-team-all,
body.theme-ncaa-all {
  /* core neutrals */
  --shark-deep:  #0b0f15;   /* near-black charcoal */
  --shark-slate: #1a2230;   /* dark slate */
  --shark-teal:  #0fbab2;   /* teal (used sparingly) */

  /* keep orange/green from polluting league mode */
  --shark-orange: #1a2230;
  --shark-green:  #1a2230;

  /* accents used by your header gradient */
  --accent-primary:        #0b0f15;
  --accent-primary-soft:   rgba(0, 190, 185, 0.06);
  --accent-primary-border: rgba(160, 167, 178, 0.35);

  --accent-secondary:      #121a26;              /* NOT light gray */
  --accent-secondary-soft: rgba(0, 190, 185, 0.10);
}

